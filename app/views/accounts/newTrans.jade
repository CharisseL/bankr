extends ../shared/template
block content
  h2 New Transaction

  form(method='post', action='/accounts/#{account._id}')
    label Deposit
    input(name='type', type='radio', value='deposit')
    label Withdrawal
    input(name='type', type='radio', value='withdrawal')
    input(name='pin', type='text', placeholder='PIN number')
    input(name='amount', type='text', placeholder='amount')
    button Create Transaction
